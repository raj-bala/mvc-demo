@model HouseHoldRelationShips.Models.UserDetails

@{
    ViewBag.Title="LogIn";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()


    <div class="card mx-auto" style="width:20rem;">
        <h4 class="card-header text-center bg-transparent text-dark">Log On</h4>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


        <div class="card-body mx-auto">


            <div class="form-group">
                @Html.LabelFor(model => model.username)
                <input type="text" required class="form-control" name="inputUsername" id="inputUsername" placeholder="Enter Your Username" />
            </div>



            <div class="form-group">
                @Html.LabelFor(model => model.password)
                <input type="password" required class="form-control" name="inputPassword" id="inputPassword" placeholder="Enter Your Password" />

            </div>
            <div class="form-group text-center">

                <input type="submit" value="LogOn" formaction="LogIn" class="btn btn-success btn-block" />

            </div>
            <div class="mx-auto text-center"> Please Enter Username and Password.</div>
            <div class="mx-auto text-center">
            <a href="@Url.Action("SignUp","Home")">Register</a> if you are a new user 
            </div>

        </div>

        <div class="text-danger text-center">
            @Session["message"]
        </div>
       
    </div>



}

@section Scripts {

    @Scripts.Render("~/bundles/jqueryval")
}